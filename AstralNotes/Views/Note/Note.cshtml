@using AstralNotes.Domain.Entities
@model Note
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@Html.ActionLink("Удалить", "Delete", "Note", new { id = Model.Id })
@Html.ActionLink("Редактировать", "Edit", "Note", new { id = Model.Id }, null)

<div class="center">
    <div class="image_svg">
        <img src="data:image/svg+xml;base64,@System.Convert.ToBase64String(Model.Image)" width="150px" height="150px" align="left" />
    </div>
    <ul class="text_note">
        <li>Тема: @Html.ActionLink(@Model.Theme, "Show", "Note", new { id = Model.Id })</li>
        <li>
            Содержание:
            @if (ViewBag.Full != null && ViewBag.Full)
            {
                @Model.Text
            }
            else
            {
                @if (Model.Text.Length > 50)
                {
                    @Model.Text.Substring(0, 50); 
                    @("...")
                    
                }
                else
                { 
                    @Model.Text
                }
            }
        </li>    
    </ul>
</div>


